<div class="page-header">
<h1>Listing questions <small></small></h1>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th>Phrase</th>
    <th>Category</th>
    <th>Order position</th>
    <th>Notes required for response</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.phrase %></td>
    <td><%= question.category_id %></td>
    <td><%= question.order_position %></td>
    <td><%= question.notes_required_for_response %></td>
    <td><%= link_to 'Show', question %></td>
    <td><%= link_to 'Edit', edit_question_path(question) %></td>
    <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

