<h1>Listing simple_values</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @simple_values.each do |simple_value| %>
  <tr>
    <td><%= simple_value.value %></td>
    <td><%= simple_value.type %></td>
    <td><%= link_to 'Show', simple_value %></td>
    <td><%= link_to 'Edit', edit_simple_value_path(simple_value) %></td>
    <td><%= link_to 'Destroy', simple_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

