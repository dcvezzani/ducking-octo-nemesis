<div class="page-header">
<h1>Spouse info <small></small></h1>
</div>

<div class="content">
  <div class="row">

    <div class="span6">
    <div class="well">
      <%= render partial: 'form_spouse_name', object: spouse, as: :spouse %>
    </div>
    </div>

    <div class="span6">
    <div class="well well-outline">
      <%= render partial: 'form_spouse_aliases', object: spouse, as: :settlor, locals: {aliases: aliases} %>
    </div>
    </div>

    <div class="span6">
    <div class="well">
      <%= render partial: 'form_basic_contact', object: spouse, as: :settlor %>
    </div>
    </div>

  </div>
</div>

<script type="text/javascript">
  $(function() {
    var currentYear = new Date().getFullYear();

    $( "#spouse_born_at" ).datepicker({
      yearRange: String(currentYear-150)+":"+String(currentYear),
      changeMonth: true,
      changeYear: true
    });
  });
</script>

